<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Places You've Been</title>
</head>
<body>
    <div class="container">
        <h1>Places You've Been</h1>

        {% if places is not empty %}
            <h2>List of Places:</h2>
            <ul>
                {% for place in places %}
                    <li>{{ place.getCity }}<br>
                    <img src= '{{ place.getPhoto }}'></li>
                {% endfor %}
            </ul>
        {% endif %}

        <form class="form-group" action="/places" method="post">
            <div class="form-group">
                <label for="city_name">Name of visited city:</label>
                <input id="city_name" name="city_name" type="text">
            </div>
            <div class="form-group">
                <label for="photo">Photo URL:</label>
                <input id="photo" name="photo" type="url">
            </div>

            <button type="submit">Add a place</button>
        </form>

        <form action="/delete_places" method="post">
            <button type="submit" name="button">Erase Your List</button>
        </form>
    </div>
</body>
</html>
